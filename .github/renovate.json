{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommits", "group:allNonMajor"],
  "schedule": ["before 9am on monday"],
  "timezone": "America/New_York",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "description": "Auto-merge patch updates",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group minor updates weekly",
      "matchUpdateTypes": ["minor"],
      "groupName": "minor updates"
    },
    {
      "description": "Label major updates as breaking",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    },
    {
      "description": "Group all linting packages",
      "matchPackagePatterns": ["eslint", "prettier"],
      "groupName": "linting packages"
    },
    {
      "description": "Group all testing packages",
      "matchPackagePatterns": [
        "vitest",
        "playwright",
        "jest",
        "testing-library"
      ],
      "groupName": "testing packages"
    },
    {
      "description": "Group all Storybook packages",
      "matchPackagePatterns": ["storybook"],
      "groupName": "storybook packages"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
