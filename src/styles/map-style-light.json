{
  "version": 8,
  "name": "SpokeToWork Light",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "sprite": "https://tiles.openfreemap.org/sprites/liberty/sprite",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#f8f9fa"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#a4c4e4"
      }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "park"],
      "paint": {
        "fill-color": "#c8e6c9"
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#ffa726",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 2, 16, 8]
      }
    },
    {
      "id": "road-trunk",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "trunk"],
      "paint": {
        "line-color": "#ffcc80",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1.5, 16, 6]
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "primary"],
      "paint": {
        "line-color": "#fff59d",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1, 16, 5]
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "secondary"],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 0.8, 16, 4]
      }
    },
    {
      "id": "road-street",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        ["get", "class"],
        ["literal", ["tertiary", "minor", "service"]]
      ],
      "paint": {
        "line-color": "#ffffff",
        "line-width": ["interpolate", ["linear"], ["zoom"], 12, 0.5, 16, 3]
      }
    },
    {
      "id": "cycleway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "any",
        ["==", ["get", "class"], "path"],
        ["==", ["get", "subclass"], "cycleway"],
        ["==", ["get", "bicycle"], "designated"]
      ],
      "paint": {
        "line-color": "#d63384",
        "line-width": ["interpolate", ["linear"], ["zoom"], 10, 1, 16, 4],
        "line-dasharray": [2, 1]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#e0e0e0",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "road-label",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          12,
          13,
          16,
          16,
          20
        ],
        "symbol-placement": "line",
        "text-max-angle": 30,
        "text-rotation-alignment": "map"
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label-city",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", ["get", "class"], "city"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Bold"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8,
          14,
          12,
          22,
          16,
          28
        ]
      },
      "paint": {
        "text-color": "#1a1a1a",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label-town",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["==", ["get", "class"], "town"],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Semibold"],
        "text-size": [
          "interpolate",
          ["linear"],
          ["zoom"],
          10,
          14,
          14,
          18,
          16,
          22
        ]
      },
      "paint": {
        "text-color": "#333333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-label-village",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": [
        "in",
        ["get", "class"],
        ["literal", ["village", "suburb", "neighbourhood"]]
      ],
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 14, 16, 18]
      },
      "paint": {
        "text-color": "#555555",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1.5
      }
    }
  ]
}
